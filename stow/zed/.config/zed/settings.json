// Zed settings
// https://zed.dev/docs/configuring-zed
{
	// "show_completions_on_input": false,
	"agent_buffer_font_size": 20.0,
	"project_panel": {
		"hide_hidden": false,
	},
	"inlay_hints": {
		"enabled": false,
	},
	// AGENTS
	"agent": {
		"default_profile": "write",
		"inline_assistant_model": {
			"provider": "copilot_chat",
			"model": "claude-haiku-4.5",
		},
		"always_allow_tool_actions": true,
		"default_model": {
			"provider": "copilot_chat",
			"model": "claude-opus-4.6",
		},
	},
	// "completions": {
	// 	"words": "disabled"
	// },
	"edit_predictions": {
		"mode": "subtle",
	},
	"features": {
		"edit_prediction_provider": "copilot",
	},
	// "show_edit_predictions": false,
	//
	//
	//
	//
	"auto_install_extensions": {
		"html": true,
		"toml": true,
		"just": true,
		"deno": true,
		"git-firefly": true,
	},
	"snippet_sort_order": "top",
	// "autosave": "on_focus_change",
	"autosave": { "after_delay": { "milliseconds": 1000 } },
	"file_types": {
		"JSONC": [
			"**/.zed/**/*.json",
			"**/zed/**/*.json",
			"**/Zed/**/*.json",
			"**/.vscode/**/*.json",
		],
		"Shell Script": [".env.*"],
		"TOML": ["**/.config/hypr/**/*.conf"],
	},
	"hard_tabs": true,
	"indent_guides": {
		"coloring": "indent_aware",
		"active_line_width": 2,
		"line_width": 2,
	},
	"ui_font_size": 24.0,
	"agent_ui_font_size": 24.0,
	"buffer_font_size": 20,
	"languages": {
		"Just": {
			// seems to completely ignore these
			"language_servers": ["!just-lsp"],
			"enable_language_server": false,
			"tab_size": 2,
			"hard_tabs": true,
			"auto_indent": false,
		},
		"Markdown": {
			"show_edit_predictions": false,
			"show_completions_on_input": false,
		},
		"JavaScript": {
			"language_servers": [
				"deno",
				"!typescript-language-server",
				"!vtsls",
				"!eslint",
			],
			"formatter": "language_server",
		},
		"TypeScript": {
			"language_servers": [
				"deno",
				"!typescript-language-server",
				"!vtsls",
				"!eslint",
			],
			"formatter": "language_server",
		},
		"TSX": {
			"language_servers": [
				"deno",
				"!typescript-language-server",
				"!vtsls",
				"!eslint",
			],
			"formatter": "language_server",
		},
	},
	"lsp": {
		"deno": {
			"settings": {
				"deno": {
					"enable": true,
				},
			},
		},
		"rust-analyzer": {
			"enable_lsp_tasks": true,
			"initialization_options": {
				"completion": {
					"postfix": {
						// disable the &foo, Box::new(foo) etc suggestions
						"enable": false,
					},
					"snippets.custom": {
						"Pizza": {
							"postfix": "pizza",
							"body": "Pizza(${receiver})",
							"description": "Wrap the expression in a `Pizza()`",
							"scope": "expr",
						},
						// "Ok": {
						// 	"postfix": "ok",
						// 	"body": "Ok(${receiver})",
						// 	"description": "Wrap the expression in a `Result::Ok`",
						// 	"scope": "expr"
						// },
						// "Box::pin": {
						// 	"postfix": "pinbox",
						// 	"body": "Box::pin(${receiver})",
						// 	"requires": "std::boxed::Box",
						// 	"description": "Put the expression into a pinned `Box`",
						// 	"scope": "expr"
						// },
						// "Arc::new": {
						// 	"postfix": "arc",
						// 	"body": "Arc::new(${receiver})",
						// 	"requires": "std::sync::Arc",
						// 	"description": "Put the expression into an `Arc`",
						// 	"scope": "expr"
						// },
						// "Some": {
						// 	"postfix": "some",
						// 	"body": "Some(${receiver})",
						// 	"description": "Wrap the expression in an `Option::Some`",
						// 	"scope": "expr"
						// },
						// "Err": {
						// 	"postfix": "err",
						// 	"body": "Err(${receiver})",
						// 	"description": "Wrap the expression in a `Result::Err`",
						// 	"scope": "expr"
						// },
						// "Rc::new": {
						// 	"postfix": "rc",
						// 	"body": "Rc::new(${receiver})",
						// 	"requires": "std::rc::Rc",
						// 	"description": "Put the expression into an `Rc`",
						// 	"scope": "expr"
						// }
					},
				},
				"rust": {
					"analyzerTargetDir": "/home/pete/.cargo_target/rust-analyzer",
				},
			},
		},
	},
	"git": {
		"inline_blame": {
			"enabled": false,
		},
	},
	"gutter": {
		"line_numbers": true,
		"runnables": false,
		"breakpoints": false,
		"folds": false,
	},
	"profiles": {
		"Focus": {
			// "ui_font_size": 16,
			// "buffer_font_size": 18,
			// "buffer_line_height": { "custom": 2.0 },
			"tab_bar": {
				"show": false,
				"show_nav_history_buttons": false,
			},
			"toolbar": {
				"breadcrumbs": false,
				"quick_actions": false,
			},
			"gutter": {
				"line_numbers": false,
				"folds": false,
				"breakpoints": false,
				"runnables": false,
				"min_line_number_digits": 0,
			},
			"indent_guides": {
				"enabled": false,
			},
			"current_line_highlight": "none",
			"scrollbar": {
				"show": "never",
				"cursors": false,
				"git_diff": false,
				"diagnostics": "none",
				"search_results": false,
				"selected_symbol": false,
			},
		},
	},
	"show_edit_predictions": true,
	"edit_predictions_disabled_in": ["comment"],
	"tab_size": 2,
	"theme": {
		"mode": "system",
		"light": "Ayu Mirage",
		"dark": "Ayu Mirage",
	},
	"terminal": {
		"dock": "right",
	},
}
