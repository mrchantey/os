// Zed settings
// https://zed.dev/docs/configuring-zed
{
	"inlay_hints": {
		"enabled": false
	},
	// AGENTS
	"agent": {
		"default_profile": "ask",
		"inline_assistant_model": {
			"provider": "copilot_chat",
			"model": "claude-sonnet-4"
		},
		"always_allow_tool_actions": true,
		"default_model": {
			"provider": "copilot_chat",
			"model": "claude-sonnet-4"
		}
	},
	"edit_predictions": {
		"mode": "subtle"
	},
	"features": {
		"edit_prediction_provider": "copilot"
	},
	// "show_edit_predictions": false,
	//
	//
	//
	//
	"auto_install_extensions": {
		"html": true,
		"toml": true,
		"just": true,
		"deno": true,
		"git-firefly": true
	},
	"snippet_sort_order": "top",

	"autosave": { "after_delay": { "milliseconds": 1000 } },
	"file_types": {
		"JSONC": [
			"**/.zed/**/*.json",
			"**/zed/**/*.json",
			"**/Zed/**/*.json",
			"**/.vscode/**/*.json"
		],
		"Shell Script": [".env.*"],
		"TOML": ["**/.config/hypr/**/*.conf"]
	},
	"hard_tabs": true,
	"indent_guides": {
		"coloring": "indent_aware",
		"active_line_width": 2,
		"line_width": 2
	},
	"ui_font_size": 24,
	"agent_font_size": 24,
	"buffer_font_size": 20,
	"languages": {
		"Markdown": {
			"show_edit_predictions": false,
			"show_completions_on_input": false
		}
	},
	"lsp": {
		"rust-analyzer": {
			"enable_lsp_tasks": true,
			"initialization_options": {
				"rust": {
					"analyzerTargetDir": "/home/pete/.cargo_target/rust-analyzer"
				}
			}
		}
	},
	"git": {
		"inline_blame": {
			"enabled": false
		}
	},
	"gutter": {
		"line_numbers": true,
		"runnables": false,
		"breakpoints": false,
		"folds": false
	},
	"profiles": {
		"Focus": {
			// "ui_font_size": 16,
			// "buffer_font_size": 18,
			// "buffer_line_height": { "custom": 2.0 },
			"tab_bar": {
				"show": false,
				"show_nav_history_buttons": false
			},
			"toolbar": {
				"breadcrumbs": false,
				"quick_actions": false
			},
			"gutter": {
				"line_numbers": false,
				"folds": false,
				"breakpoints": false,
				"runnables": false,
				"min_line_number_digits": 0
			},
			"indent_guides": {
				"enabled": false
			},
			"current_line_highlight": "none",
			"scrollbar": {
				"show": "never",
				"cursors": false,
				"git_diff": false,
				"diagnostics": "none",
				"search_results": false,
				"selected_symbol": false
			}
		}
	},
	"show_edit_predictions": true,
	"tab_size": 2,
	"theme": {
		"mode": "system",
		"light": "Ayu Mirage",
		"dark": "Ayu Mirage"
	},
	"terminal": {
		"dock": "right"
	}
}
