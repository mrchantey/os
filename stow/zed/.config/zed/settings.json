// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	"indent_guides": {
		"coloring": "indent_aware",
		"active_line_width": 2,
		"line_width": 2
	},
	"hard_tabs": true,
	"tab_size": 2,
	"autosave": { "after_delay": { "milliseconds": 1000 } },
	"agent": {
		"default_profile": "ask",
		"inline_assistant_model": {
			"provider": "copilot_chat",
			"model": "gpt-5-mini"
		},
		// "always_allow_tool_actions": true,
		"default_model": {
			"provider": "copilot_chat",
			"model": "gpt-5"
		}
	},
	"show_edit_predictions": true,
	"edit_predictions": {
		"mode": "subtle"
		// "mode": "eager"
	},
	// "show_edit_predictions": false,
	"icon_theme": "VSCode Icons (Dark)",
	"features": {
		"edit_prediction_provider": "zed"
	},
	"ui_font_size": 24,
	"agent_font_size": 24,
	"buffer_font_size": 20,
	"theme": {
		"mode": "system",
		"light": "Ayu Mirage",
		"dark": "Ayu Mirage"
	},
	"terminal": {
		"dock": "right"
	},
	"languages": {
		"Markdown": {
			"show_edit_predictions": false,
			"show_completions_on_input": false
		}
	},
	"lsp": {
		"rust-analyzer": {
			"enable_lsp_tasks": true,
			"initialization_options": {
				"rust": {
					"analyzerTargetDir": "/home/pete/.cargo_target/rust-analyzer"
				}
			}
		}
	},
	"git": {
		"inline_blame": {
			"enabled": false
		}
	},
	"gutter": {
		"line_numbers": true,
		"runnables": false,
		"breakpoints": false,
		"folds": false
	},
	"profiles": {
		"Focus": {
			// "ui_font_size": 16,
			// "buffer_font_size": 18,
			// "buffer_line_height": { "custom": 2.0 },
			"tab_bar": {
				"show": false,
				"show_nav_history_buttons": false
			},
			"toolbar": {
				"breadcrumbs": false,
				"quick_actions": false
			},
			"gutter": {
				"line_numbers": false,
				"folds": false,
				"breakpoints": false,
				"runnables": false,
				"min_line_number_digits": 0
			},
			"indent_guides": {
				"enabled": false
			},
			"current_line_highlight": "none",
			"scrollbar": {
				"show": "never",
				"cursors": false,
				"git_diff": false,
				"diagnostics": "none",
				"search_results": false,
				"selected_symbol": false
			}
		}
	}
}
